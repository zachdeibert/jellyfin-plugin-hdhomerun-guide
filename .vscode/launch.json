{
    // Paths and plugin names are configured in settings.json
    "version": "0.2.0",
    "configurations": [
        {
            "type": "coreclr",
            "name": "Jellyfin",
            "request": "launch",
            "preLaunchTask": "jellyfin-build-and-copy",
            "program": "${config:jellyfinDir}/bin/Debug/net8.0/jellyfin.dll",
            "args": [
                "--webdir",
                "${config:jellyfinWebDir}/dist/"
            ],
            "cwd": "${config:jellyfinDir}",
        }
    ]
}
