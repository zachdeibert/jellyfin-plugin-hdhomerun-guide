{
    // Paths and plugin name are configured in settings.json
    "version": "2.0.0",
    "tasks": [
        {
            // A chain task - build the plugins, then copy it to your
            // jellyfin server's plugin directory
            "label": "jellyfin-build-and-copy",
            "dependsOrder": "sequence",
            "dependsOn": [
                "dotnet-build",
                "make-jellyfin-plugin-dirs",
                "copy-hdhr-dvr-plugin",
                "copy-hdhr-guide-plugin"
            ]
        },
        {
            // Build the plugins
            "label": "dotnet-build",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "publish",
                "--configuration=Debug",
                "${workspaceFolder}/media-tools.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            // Ensure the plugin directories exist before trying to use them
            "label": "make-jellyfin-plugin-dirs",
            "type": "shell",
            "command": "mkdir",
            "windows": {
                "args": [
                    "-Force",
                    "-Path",
                    "${config:jellyfinWindowsDataDir}/plugins/Com.ZachDeibert.MediaTools.Hdhr.Dvr.Jellyfin/,${config:jellyfinWindowsDataDir}/plugins/Com.ZachDeibert.MediaTools.Hdhr.Guide.Jellyfin/"
                ]
            },
            "linux": {
                "args": [
                    "-p",
                    "${config:jellyfinLinuxDataDir}/plugins/Com.ZachDeibert.MediaTools.Hdhr.Dvr.Jellyfin/",
                    "${config:jellyfinLinuxDataDir}/plugins/Com.ZachDeibert.MediaTools.Hdhr.Guide.Jellyfin/"
                ]
            }
        },
        {
            // Copy the plugin dll to the jellyfin plugin install path
            "label": "copy-hdhr-dvr-plugin",
            "type": "shell",
            "command": "cp",
            "windows": {
                "args": [
                    "hdhr-dvr-jellyfin-plugin/bin/Debug/net8.0/publish/Com.ZachDeibert.MediaTools.Hdhr.Api.dll,hdhr-dvr-jellyfin-plugin/bin/Debug/net8.0/publish/Com.ZachDeibert.MediaTools.Hdhr.Dvr.Core.dll,hdhr-dvr-jellyfin-plugin/bin/Debug/net8.0/publish/Com.ZachDeibert.MediaTools.Hdhr.Dvr.Jellyfin.dll",
                    "${config:jellyfinWindowsDataDir}/plugins/Com.ZachDeibert.MediaTools.Hdhr.Dvr.Jellyfin/"
                ]
            },
            "linux": {
                "args": [
                    "-r",
                    "hdhr-dvr-jellyfin-plugin/bin/Debug/net8.0/publish/Com.ZachDeibert.MediaTools.Hdhr.Api.dll",
                    "hdhr-dvr-jellyfin-plugin/bin/Debug/net8.0/publish/Com.ZachDeibert.MediaTools.Hdhr.Dvr.Core.dll",
                    "hdhr-dvr-jellyfin-plugin/bin/Debug/net8.0/publish/Com.ZachDeibert.MediaTools.Hdhr.Dvr.Jellyfin.dll",
                    "${config:jellyfinLinuxDataDir}/plugins/Com.ZachDeibert.MediaTools.Hdhr.Dvr.Jellyfin/"
                ]
            }
        },
        {
            // Copy the plugin dll to the jellyfin plugin install path
            "label": "copy-hdhr-guide-plugin",
            "type": "shell",
            "command": "cp",
            "windows": {
                "args": [
                    "hdhr-guide-jellyfin-plugin/bin/Debug/net8.0/publish/Com.ZachDeibert.MediaTools.Hdhr.Api.dll,hdhr-guide-jellyfin-plugin/bin/Debug/net8.0/publish/Com.ZachDeibert.MediaTools.Hdhr.Guide.Jellyfin.dll",
                    "${config:jellyfinWindowsDataDir}/plugins/Com.ZachDeibert.MediaTools.Hdhr.Guide.Jellyfin/"
                ]
            },
            "linux": {
                "args": [
                    "-r",
                    "hdhr-guide-jellyfin-plugin/bin/Debug/net8.0/publish/Com.ZachDeibert.MediaTools.Hdhr.Api.dll",
                    "hdhr-guide-jellyfin-plugin/bin/Debug/net8.0/publish/Com.ZachDeibert.MediaTools.Hdhr.Guide.Jellyfin.dll",
                    "${config:jellyfinLinuxDataDir}/plugins/Com.ZachDeibert.MediaTools.Hdhr.Guide.Jellyfin/"
                ]
            }
        },
    ]
}
