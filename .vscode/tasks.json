{
    // Paths and plugin name are configured in settings.json
    "version": "2.0.0",
    "tasks": [
        {
            // A chain task - build the plugin, then copy it to your
            // jellyfin server's plugin directory
            "label": "build-and-copy",
            "dependsOrder": "sequence",
            "dependsOn": [
                "build",
                "make-plugin-dirs",
                "copy-hdhomerun-dvr",
                "copy-hdhomerun-guide"
            ]
        },
        {
            // Build the plugin
            "label": "build",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "publish",
                "--configuration=Debug",
                "${workspaceFolder}/JellyfinPlugins.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            // Ensure the plugin directories exist before trying to use them
            "label": "make-plugin-dirs",
            "type": "shell",
            "command": "mkdir",
            "windows": {
                "args": [
                    "-Force",
                    "-Path",
                    "${config:jellyfinWindowsDataDir}/plugins/Com.ZachDeibert.JellyfinPluginHDHomeRunDVR/,${config:jellyfinWindowsDataDir}/plugins/Com.ZachDeibert.JellyfinPluginHDHomeRunGuide/"
                ]
            },
            "linux": {
                "args": [
                    "-p",
                    "${config:jellyfinLinuxDataDir}/plugins/Com.ZachDeibert.JellyfinPluginHDHomeRunDVR/",
                    "${config:jellyfinLinuxDataDir}/plugins/Com.ZachDeibert.JellyfinPluginHDHomeRunGuide/"
                ]
            }
        },
        {
            // Copy the plugin dll to the jellyfin plugin install path
            "label": "copy-hdhomerun-dvr",
            "type": "shell",
            "command": "cp",
            "windows": {
                "args": [
                    "hdhomerun-dvr/bin/Debug/net8.0/publish/Com.ZachDeibert.JellyfinPluginHDHomeRunDVR.dll",
                    "${config:jellyfinWindowsDataDir}/plugins/Com.ZachDeibert.JellyfinPluginHDHomeRunDVR/"
                ]
            },
            "linux": {
                "args": [
                    "-r",
                    "hdhomerun-dvr/bin/Debug/net8.0/publish/Com.ZachDeibert.JellyfinPluginHDHomeRunDVR.dll",
                    "${config:jellyfinLinuxDataDir}/plugins/Com.ZachDeibert.JellyfinPluginHDHomeRunDVR/"
                ]
            }
        },
        {
            // Copy the plugin dll to the jellyfin plugin install path
            "label": "copy-hdhomerun-guide",
            "type": "shell",
            "command": "cp",
            "windows": {
                "args": [
                    "hdhomerun-guide/bin/Debug/net8.0/publish/Com.ZachDeibert.JellyfinPluginHDHomeRunGuide.dll",
                    "${config:jellyfinWindowsDataDir}/plugins/Com.ZachDeibert.JellyfinPluginHDHomeRunGuide/"
                ]
            },
            "linux": {
                "args": [
                    "-r",
                    "hdhomerun-guide/bin/Debug/net8.0/publish/Com.ZachDeibert.JellyfinPluginHDHomeRunGuide.dll",
                    "${config:jellyfinLinuxDataDir}/plugins/Com.ZachDeibert.JellyfinPluginHDHomeRunGuide/"
                ]
            }
        },
    ]
}
